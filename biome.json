{
    "$schema": "https://biomejs.dev/schemas/1.5.0/schema.json",
    "assist": {
        "actions": {
            "source": {
                "organizeImports": "on"
            }
        }
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "a11y": {
                "recommended": true
            },
            "complexity": {
                "recommended": true
            },
            "correctness": {
                "recommended": true
            },
            "performance": {
                "recommended": true
            },
            "security": {
                "recommended": true
            },
            "style": {
                "recommended": true
            },
            "suspicious": {
                "recommended": true
            },
            "nursery": {
                "recommended": true
            }
        }
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 240
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single",
            "trailingCommas": "es5",
            "semicolons": "always"
        }
    }
}